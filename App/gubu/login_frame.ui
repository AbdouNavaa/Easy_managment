import tkinter as tk
from pygubu import Builder

class LoginApp:
    def __init__(self, root):
        # Charger le fichier .ui
        self.builder = Builder()
        self.builder.add_from_file("login_form.ui")

        # Attacher l'interface au root
        self.mainwindow = self.builder.get_object("main_frame", root)

        # Ajouter une action au bouton
        self.builder.connect_callbacks(self)

    def on_login_button_clicked(self):
        username = self.builder.get_object("username_entry").get()
        password = self.builder.get_object("password_entry").get()
        print(f"Username: {username}, Password: {password}")

if __name__ == "__main__":
    root = tk.Tk()
    app = LoginApp(root)
    root.mainloop()
